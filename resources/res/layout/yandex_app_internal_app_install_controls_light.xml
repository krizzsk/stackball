<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:layout_gravity="top" android:layout_width="match_parent" android:layout_height="56dp" android:layout_marginLeft="8dp">
    <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
    <FrameLayout android:paddingTop="8dp" android:paddingBottom="16dp" android:layout_width="32dp" android:layout_height="56dp">
        <ImageView android:id="@+id/feedback" android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/yandex_ads_internal_app_install_feedback_white"/>
    </FrameLayout>
    <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <View android:layout_width="8dp" android:layout_height="match_parent"/>
        <FrameLayout android:id="@+id/close" android:paddingLeft="8dp" android:paddingTop="8dp" android:paddingRight="8dp" android:paddingBottom="16dp" android:visibility="gone" android:layout_width="48dp" android:layout_height="56dp">
            <TextView android:id="@+id/close_appearance" android:background="@drawable/yandex_ads_internal_app_install_close_white" android:layout_width="32dp" android:layout_height="32dp"/>
        </FrameLayout>
    </FrameLayout>
    <FrameLayout android:id="@+id/timer_container" android:paddingTop="8dp" android:paddingRight="8dp" android:paddingBottom="12dp" android:focusable="true" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="match_parent">
        <FrameLayout android:background="@drawable/yandex_ads_internal_app_install_circle_for_dark_background" android:layout_width="36dp" android:layout_height="36dp">
            <TextView android:textSize="14dp" android:textColor="@color/yandex_ads_internal_text_color_white" android:layout_gravity="center" android:id="@+id/timer_value" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </FrameLayout>
    </FrameLayout>
</LinearLayout>
